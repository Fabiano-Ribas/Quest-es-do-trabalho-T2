#include <stdio.h>
#include <stdlib.h>
int soma (int x, int y);

int main() {
	int x, y, resultado;
	printf (" Informe a primeira parcela: ");
	scanf ("%d", &x);
	printf (" Informe a segunda parcela: ");
	scanf ("%d", &y);
	resultado = soma(x,y);
	printf ("O resultado da soma eh : %d", resultado);
	return 0;
}

int soma (int x, int y){
	int resultado;
	resultado = x+y;
	return resultado;
}
